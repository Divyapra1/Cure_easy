 <head>
  <style type="text/css">
    .margin{
      margin-top: 20%;
    }
    .btn-custom {
  width: 50%; /* Make the button wider */
  background-color: #8B4513; /* Dark brown color */
  color: white; /* Text color */
  height: 40px;
  border-radius: 0;
  border: none;
}
  </style>
 </head>
 <body>
 <section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h3>
                 <%= form_for(resource, as: resource_name, url:user_session_path) do |f| %>
  <div class="field form-outline mb-4">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
  </div>
  

  <div class="field form-outline mb-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",class: "form-control form-control-lg" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

 
  <div class="pt-1 mb-4">
   <%=f.submit "Log in", class: "btn btn-dark btn-lg btn-block btn-custom" %>
 </div>
<% end %>
<%=render "devise/shared/links", class: "margin"   %>
</div>

            </div>
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>