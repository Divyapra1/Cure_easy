  .details-box {
    border: 2px solid #2c3e50;
    padding: 20px;
    width: 50%;
    margin: 0 auto;
    font-family: Arial, sans-serif;
    font-size: 18px;
  }
  .details-box h3 {
    font-size: 24px;
    margin-bottom: 20px;
  }
  .details-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
  }
  .label {
    font-weight: bold;
    width: 200px;
  }
  .value {
    margin-left: 220px;
  }
  .btn-block{
    max-width: 30%;
    
  }
  .button-container{
    margin-bottom: 10px;
    
  }
