<body style="background-color: #CAD3C8;">



<div class="details-container" style="margin-top: 8%;">
  <div class="profile-box">
    <% r = User.find(@details.user_id) %>
    <%if r.main_image.attached? %>
    <%= image_tag r.main_image, class: "circular-image" %>
     <span style="margin-left: 25% "><%= r.firstname %></span>
    <% else %>
     <%= image_tag 'default-avatar.png', class: "circular-image" %>
     <span style="margin-left: 25% "><%= r.firstname %></span>


    <%end%>
    
  </div>

 <div class="details-box">
  <h3 style="margin-left: 25%;">Patient Details</h3>
  <div class="details-item">
    <span class="label">Date of appointment</span>
    <span class="value"><%=@details.select_date%></span>
  </div>
  <% time = @details.select_time.strftime('%H:%M:%S') %>
  <div class="details-item">
    <span class="label">Time of appointment</span>
    <span class="value"><%= time %> IST</span>
  </div>
  <% x = Catalogue.find(@details.catalogue_id) %>
  <div class="details-item">
    <span class="label">Catalogue</span>
    <span class="value"><%= x.name %></span>
  </div>
  <div class="details-item">
    <span class="label">Status</span>
    <span class="value"><%=@details.status%></span>
  </div>
  <div class="details-item">
    <span class="label">Whatsapp Number</span>
    <span class="value"><%= r.whatsapp_no %></span>
  </div>
  <div class="details-item">
    <span class="label">Age</span>
    <span class="value"><%= r.age %></span>
  </div>
  <div>
    <div class="button-container">
          <%= button_to "Rescheduled", reschedule_appointment_path(@details.id), method: :get, class: "btn btn-secondary btn-block" %>
    </div>
    <div class="button-container">
          <%= button_to "check In", check_in_path(@details.id), method: :get, class: "btn btn-secondary btn-block" %>
    </div>


    

  </div>
</div>


</body>
</html>
